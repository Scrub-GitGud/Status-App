<%- include('partials/HEADER.ejs') %>

<!-- --------------------------------------------------Modal---------------------------------------------- -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create New Discussion</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="/newDiscussion" method="POST">
      <div class="modal-body">
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Title:</label>
            <input type="text" class="form-control" id="recipient-name" name="newDiscussionTitle">
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label">Details:</label>
            <textarea class="form-control" id="message-text" name="newDiscussionDetail"></textarea>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-dark" data-dismiss="modal">Close</button>
        <button class="btn btn-dark" type="submit">Create</button>
      </div>
    </form>
    </div>
  </div>
</div>
<!-- --------------------------------------------------Modal---------------------------------------------- -->

<!-- ---------------------------------------------- Cards -------------------------------------------- -->

<div class=" card-deck d BodyDiv">

    <div class="row">
      <% for(let i = 0; i < allDiscussions.length; i++) { %>
        <div class="col-lg-2 col-md-4 col-sm-6 myCARD" onclick="location.href='<%= allDiscussions[i].discussion_title %>'">
          <h5><%= allDiscussions[i].discussion_title %></h5>
          <p class="CardDetails"><%= allDiscussions[i].details.slice(0,60) + " ..."%></p>
          <p class="different_p"><%= allDiscussions[i].Posts.length %> Posts</p>
        </div>
      <% } %>


      <div class="col-lg-2 col-md-4 col-sm-6 myCARD">
        <button type="button" class="btn btn-dark postBtn plusBtn" data-toggle="modal" data-target="#exampleModal" data-whatever="@getbootstrap">
          <i class="fas fa-plus fa-8x plusIcon"></i>
          <!-- + -->
        </button>
      </div>
    </div>

</div>


<!-- ----------------------------------------------BODY-------------------------------------------- -->

    
</body>
</html>
